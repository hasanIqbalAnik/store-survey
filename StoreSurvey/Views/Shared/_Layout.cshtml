<!DOCTYPE html>
@{
    var userName = User.Identity.Name;
    var role = Roles.GetRolesForUser(userName).FirstOrDefault();
    
}
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet"
        type="text/css" />
    <link href="../../Content/bootstrap-fileupload/bootstrap-fileupload.min.css" rel="stylesheet"
        type="text/css" />
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script type="text/javascript">
            console.log("@role");
            $(document).ready(function () {
               if("@role" != "Admin") $(".well").hide();
            });
        </script>
</head>
<body>
    <div class="container-fluid">
        <div id="header" class="row-fluid">
            <div id="title">
                <h1>Neilson's Perfect Store</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
        </div>
        <div id="" class="row-fluid">
           <div class="navbar">
    <div class="navbar-inner">
        <div class="container-fluid">
       
            <div class="nav-collapse">
                <ul class="nav">
                    <li class="@(ViewBag.Active == "Home" ? "active" : "")">
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li class="divider-vertical"></li>
                    <li class="@(ViewBag.Active == "About" ? "active" : "")">
                        @Html.ActionLink("About", "About", "Home")
                    </li>
                    <li class="divider-vertical"></li>
                    
                    
                    <li> @Html.ActionLink("Shops","Index","Shop")</li>
                    <li class="divider-vertical"></li>
                    <li>@Html.ActionLink("Admin Area","Index","Admin")</li>
                </ul>
            </div>

        </div>
    </div>
</div>
        </div>
        <div class="row-fluid">
        <div class="span3">
         <div class="well sidebar-nav"> 
            <ul class="nav nav-list accordion"> 
              <li class="nav-header">Admin Actions</li> 
              <li ><a href="/Admin/Create" class="btn" style="text-decoration:none">Create User</a></li> 
              <li><a href="/Admin/Index" class="btn" style="text-decoration:none">View Users</a></li> 
              <li><a href="/Admin/LockedUsers" class="btn" style="text-decoration:none">View Locked Users</a></li> 
              <li><a href="/Admin/FileUpload" class="btn" style="text-decoration:none">Upload File</a></li> 
              </ul> 
          </div><!--/.well -->
          </div>
        <div id="" class="row-fluid">
            @RenderBody()
        </div>
        
    </div>
    </div>
            

        <script src="@Url.Content("~/Scripts/bootstrap/bootstrap.min.js")" type="text/javascript"></script>
    <script src="../../Scripts/jquery-ui-1.8.11.min.js" type="text/javascript"></script>
    <script src="../../Scripts/bootstrap/bootstrap-confirm.js" type="text/javascript"></script>
    <script src="../../Scripts/bootstrap-fileupload/bootstrap-fileupload.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.blockUI.js" type="text/javascript"></script>
    <script src="../../Scripts/bootstrap/bootstrap-filestyle.min.js" type="text/javascript"></script>

</body>
 
      <hr> 

      <footer> 
        <p>&copy; Company 2013</p> 
      </footer> 
</html>