@model StoreSurvey.Models.LogOnModel
@{
    ViewBag.Title = "Log On";
    Layout = "";
    
}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>



   <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet"
        type="text/css" />

<style>
    
div#title
{
    background-color:Gray;
    float:none;
    text-align:center;
    
}
    
</style>
<script type="text/javascript">

    $(".navbar").hide();
    $("#logindisplay").hide();
    
    
    

</script>

<div class="container-fluid">
<div class="row-fluid">
  <div id="title" class="span12" >
                <h1>Neilson's Perfect Store</h1>
            </div>
            </div>
    <div class="row-fluid">
        <div class="span4 offset4 well">
            
             @*   @Html.ValidationSummary(true, "Username or Password was incorrect. Please try again.")*@
             @if (ViewData.ModelState.IsValid == false) {
           	<div class="alert alert-error" id="testId">
                <a class="close" data-dismiss="alert" href="#">×</a>Incorrect Username or Password!
            </div>

             }
 	
            <form method="POST" action="/Account/LogOn" accept-charset="UTF-8">
            <input type="text" id="UserName" class="span12" name="UserName" placeholder="Username"><br />
            <input type="Password" id="Password" class="span12" name="password" placeholder="Password">
            <select name="Region">
  <option value="Chittagong">Chittagong</option>
  <option value="Khulna">Khulna</option>
  <option value = "Patuakhali">Patuakhali</option>
  <option value = "Nasirabad/CTG B">Nasirabad/CTG B</option>
  <option value="Magura">Magura</option>
  <option value="Jhenaidah">Jhenaidah</option>
  <option value="Bogra">Bogra</option>
</select>
            <label class="checkbox">
                <input type="checkbox" name="RememberMe" value="1">
                Remember Me
            </label>
            <button type="submit" name="submit" class="btn btn-info btn-block">
                Sign in</button>
            </form>
        </div>
    </div>
</div>
